<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".CardPraia2">

    <View
            android:layout_width="430dp"
            android:layout_height="70dp"
            android:background="@drawable/gradient"
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="433dp"
            android:layout_height="87dp"
            android:background="@drawable/gradient"
            android:id="@+id/view4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView"
            android:text="AventuraRN"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintVertical_bias="0.023"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="56dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/info"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.782"/>

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="53dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/baseline_settings_24"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.27"/>

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="64dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/baseline_directions_bus_filled_24"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.53"/>

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="49dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/leave"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.955"/>

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="59dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/baseline_person_24"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.045"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="846dp"
            android:layout_height="286dp"
            app:srcCompat="@drawable/praiaforte"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.006" app:layout_constraintHorizontal_bias="0.507"/>
    <ScrollView
            android:layout_width="422dp"
            android:layout_height="259dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/goToWebsiteButton" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/imageDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_praia_do_forte_dos_reis_magos_uma_praia_localizada_na_cidade_de_natal_no_estado_do_rio_grande_do_norte_brasil_o_nome_uma_refer_ncia_ao_forte_dos_reis_magos_uma_fortaleza_hist_rica_constru_da_no_s_culo_xvi_pelos_colonizadores_portugueses_para_proteger_a_cidade_dos_ataques_de_invasores_a_praia_em_si_conhecida_pela_sua_beleza_natural_e_guas_tranquilas_ideais_para_banho_e_pr_tica_de_esportes_aqu_ticos_como_nata_o_e_stand_up_paddle_suas_areias_s_o_claras_e_extensas_proporcionando_espa_o_para_caminhadas_e_atividades_de_lazer_ao_longo_da_orla_encontram_se_quiosques_e_barracas_que_oferecem_petiscos_bebidas_e_alugu_is_de_cadeiras_e_guarda_s_is_para_os_visitantes_a_infraestrutura_na_regi_o_tamb_m_inclui_restaurantes_hot_is_e_pousadas_tornando_a_uma_op_o_popular_para_turistas_que_buscam_relaxar_e_desfrutar_das_belezas_naturais_do_litoral_potiguar_al_m_disso_a_proximidade_com_o_forte_dos_reis_magos_adiciona_um_elemento_hist_rico_e_cultural_experi_ncia_possibilitando_aos_visitantes_explorar_tanto_as_belezas_naturais_quanto_as_constru_es_hist_ricas_da_regi_o"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:padding="16dp"/>

    </ScrollView>
    <Button
            android:id="@+id/goToWebsiteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir para o site"
            android:backgroundTint="@android:color/holo_orange_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.874"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="52dp" app:srcCompat="@drawable/barco" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintVertical_bias="0.023"/>

</androidx.constraintlayout.widget.ConstraintLayout>
